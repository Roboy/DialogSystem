{
  "comment": "An experimental personality for Roboy Chef awesome cooking",
  "initialState": "Greetings",
  "states": [
    {
      "identifier": "Greeting",
      "implementation": "org.roboy.dialog.states.ordinaryStates.PassiveGreetingState",
      "transitions": {
        "greetingDetected": "ChefIntro"
      }
    },
    {
      "identifier": "ChefIntro",
      "implementation": "org.roboy.dialog.states.experimental.chefStates.ChefIntroductionState",
      "transitions": {
        "retrieveProducts": "RetrieveProducts",
      }
    },
    {
      "identifier": "RetrieveProduct",
      "implementation": "org.roboy.dialog.states.experimental.chefStates.RetrieveProductState",
      "transitions": {
        "offerRecipe": "QuestionAnswering"
      }
    },
    {
      "identifier": "ReciteRecipe",
      "implementation": "org.roboy.dialog.states.experimental.chefStates.ReciteRecipeState",
      "transitions": {
        "questionAnswering": "Farewell"
      }
    },
    {
      "identifier": "Farewell",
      "implementation": "org.roboy.dialog.states.ordinaryStates.FarewellState",
      "transitions": {}
    }
  ]
}