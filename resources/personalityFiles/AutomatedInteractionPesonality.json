{
  "comment": "Personality that is running by itself.",
  "initialState": "Idle",
  "states": [
    {
      "identifier": "Idle",
      "implementation": "roboy.dialog.states.monologStates.IdleState",
      "transitions":{
        "timeIsUp": "ActiveIntro"
      }
    },
    {
      "identifier": "ActiveIntro",
      "implementation": "roboy.dialog.states.monologStates.ActiveIntroState",
      "transitions": {
        "peopleAround": "InfoTalk",
        "lonelyRoboy": "Idle"
      }
    },
    {
      "identifier": "InfoTalk",
      "implementation": "roboy.dialog.states.monologStates.InfoTalkState",
      "transitions": {
        "personDetected": "ChooseInteractiveTalk",
        "lonelyRoboy": "Idle"
      }
    },
    {
      "identifier": "ChooseInteractiveTalk",
      "implementation": "roboy.dialog.states.monologStates.InfoTalkState",
      "transitions": {
        "newPerson": "PersonalQA",
        "roboy": "RoboyQA",
        "math": "Math",
        "akinator": "Akinator",
        "snapchat": "Snapchat",
        "phoneDetected": "SocialMedia"
      }
    }
  ]
}
